extends layouts/main

block content
    .form-container
        form(action=`/videos${routes.upload}`, method="post")
            label(for="file") Video Upload
            input(type="file", name="file", id="file", required=true)
            input(type="text", name="title" placeholder="Title", required=true)
            textarea(name="description", placeholder="Description", required=true)
            input(type="submit", value="Upload Video")
        