extends layouts/main

block content
    .form-container
    form(action=`/videos${routes.editVideo}`, method="post")
        input(type="text", name="title", placeholder="New Title")
        textarea(name="description", placeholder="New Description")
        input(type="submit", value="update Video")
    a.form-container___link.form-container__link--delete-video(href=`/videos${routes.deleteVideo}`) Delete Video
